<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/provider_title"
            android:textStyle="bold"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/groupProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/provider_system" />

            <RadioButton
                android:id="@+id/radioOpenAi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/provider_openai" />

            <RadioButton
                android:id="@+id/radioAzure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/provider_azure" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/tts_speed" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.5"
            android:valueTo="1.5"
            android:stepSize="0.1"
            android:value="1.0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tts_pitch" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderPitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.5"
            android:valueTo="1.5"
            android:stepSize="0.1"
            android:value="1.0" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/openai_key">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputOpenAiKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/openai_base">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputOpenAiBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/azure_key">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAzureKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/azure_region">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAzureRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kaydet"
            style="@style/Widget.Material3.Button"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_voice"
            style="@style/Widget.Material3.Button"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
